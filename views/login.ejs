<%- include("header") -%>
<div class="box">
<div class="login-outer-container">
    <div class="login-inner-container">
        <form action="/login" method="post">
            <h1>Login</h1>
            <p style="line-height: 6px; margin-bottom: 40px;"> Use our convertor tools</p>
            <div class="your-input">
                <div class="input">
                    <input type="email" name="username" id="email" required autocomplete="on" required/>
                    <label for="email">Email</label>
                </div>
                <div class="input">
                    <input type="password" name="password" id="password" required minlength="8" />
                    <label for="password">Password</label>
                </div>
            </div>
            <button type="submit" class="button btn login">Login</button>
    
        </form>
            <a href="<%= URL %>/Reset-Password" class="forgot-password-link">
                Forgot Password?
            </a>
        
        <span style="color: #c68007; margin-top: 20px;">OR</span>
        <div class="login-link"><p>create an account?<a href="/signin"> Sign in</a></div>
        
        
    </div>
</div>
</div> 
<%- include("footer") -%>
