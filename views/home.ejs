<%- include("header") -%>
    <!-- We use enctype="multipart/form-data" to serve files to server -->
    <div class="box">
        <div class="container">
            <div class="form">
                <form action="/merge" method="post" enctype="multipart/form-data">
                    <label for="fileinput1">Select the pdf files you want to merge</label>
                    <br>
                    <!-- Used multiple to accept multiple file
                accept type to accept file of specific extension -->
                    <input id="fileinput1" type="file" name="pdfs" max-size="2000" required multiple accept=".pdf">
                    <br>
                    <button type="submit" value="Merge" class="button button1">Convert</button>
                </form>
            </div>

            <div class="form">
                <form action="/doctopdf" method="post" enctype="multipart/form-data">
                    <label for="fileinput1">Select the docx file you want to convert</label>
                    <br>
                    <!-- Used multiple to accept multiple file
                accept type to accept file of specific extension -->
                    <input id="fileinput1" type="file" name="docx" max-size="2000" required accept=".docx, .doc">
                    <br>
                    <button type="submit" value="Merge" class="button button1">Convert</button>
                </form>
            </div>
        </div>
    </div>
    <%- include("footer") -%>